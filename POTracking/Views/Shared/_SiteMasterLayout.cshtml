    <script type="text/javascript">
        $().ready(function () {
            @*Render menu ASAP*@
            $("#menu1").menu({ position: { at: "left bottom" } });
            @{bool? oprSuccess = ((bool?)ViewData["oprSuccess"]);}
            @if (oprSuccess.HasValue)
            {
                @Html.Raw(Defaults.getOprResult(oprSuccess.Value, (ViewData["err"] ?? "Error").ToString()))
            }
